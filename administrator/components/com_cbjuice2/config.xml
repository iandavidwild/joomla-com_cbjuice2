<?xml version="1.0" encoding="utf-8"?>
<config>
 <version>1.5</version>
    <params>
    <param name="csv_delimiter" type="text" default="," label="CSV Delimiter" description="Delimiter used in the CSV Files"></param>
    <param name="mail_sender" type="text" label="Sender"
    	description="Sender for Confirmation Mail">
    </param>
    <param name="mail_subject" type="text" label="Subject"
    	description="Subject for Mail Message" default="Your website account has been edited">
    </param>
    <param name="mail_body" type="textarea" label="CBJ_MAIL_BODY"
